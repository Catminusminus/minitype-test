{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "lib": ["es2020"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*", "../test/src/test-body.ts", "../test/src/test.ts"],
  "exclude": ["dist", "node_modules"],
  "compileOnSave": false
}
